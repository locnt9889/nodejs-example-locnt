//layout dashboard
doctype html
html
  head
    title= title

    link(rel='stylesheet', href='/stylesheets/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block link

    script(src='/javascripts/jquery-2.1.1.js', type='text/javascript')
    script(src='/javascripts/bootstrap/bootstrap.js', type='text/javascript')
    script(src='/javascripts/jquery.validate.js', type='text/javascript')
    block script

  body
      #header-dashboard.navbar.navbar-default.navbar-static-top
          .container
              ul.nav.navbar-nav.navbar-right
                  li
                      a.usernameValue= username
                  li
                      a#dropdownMenu1.dropdown-toggle(type='button', data-toggle='dropdown') Accout
                      ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu1')
                          li(role='presentation')
                              a(role='menuitem', tabindex='-1', href='change-password') Change Password
                          li(role='presentation')
                              a(role='menuitem', tabindex='-1', href='#') Update Profile
                          li(role='presentation')
                              a(role='menuitem', tabindex='-1', href='change-rule-user') Update Role User

                  li
                      a(href='logout') Logout
      #content-dashboard.container
          block content
